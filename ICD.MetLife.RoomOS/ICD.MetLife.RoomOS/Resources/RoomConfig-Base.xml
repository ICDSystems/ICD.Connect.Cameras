<Room id="12345678" type="MetlifeRoom">

  <!-- Room information -->
  <Name>Basic R3</Name>
  <Prefix>US NC Cary MET1</Prefix>
  <Number>02.101</Number>
  <Owner>
    <Name>John Smith</Name>
	<Phone>[919] 555-1212</Phone>
	<Email>user@metlife.com</Email>
  </Owner>

  <!-- The teleconferencing device -->
  <DialingPlan>DialingPlan.xml</DialingPlan>
  <PhonebookType>Local</PhonebookType>

  <!-- The TV tuner -->
  <TvPresets>TvPresets.xml</TvPresets>

  <!-- The devices that show in the Share submenu -->
  <Sources>
    <Source>3</Source>
    <Source>6</Source>
  </Sources>

  <!-- The panels in the room -->
  <Panels>
    <Panel id="1" type="Tsw750">
      <Name>Table Panel</Name>
      <IPID>0x03</IPID>
    </Panel>
  </Panels>

  <!-- Ports for communicating with the devices in the room -->
  <Ports>
    <Port id="1" type="SSH">
      <Name>SSH port for Codec</Name>
      <Address>10.40.2.115</Address>
      <Username>admin</Username>
      <Password>profound</Password>
    </Port>

    <Port id="2" type="ComPort">
      <Name>Scaler to Display serial</Name>
      <Device>7</Device>
      <Address>1</Address>
    </Port>

    <Port id="3" type="IrPort">
      <Name>Scaler to TV Tuner IR</Name>
      <Device>7</Device>
      <Address>1</Address>
      <Driver>Comcast XFinity RSDICD Standard.ir</Driver>
      <PulseTime>100</PulseTime>
      <BetweenTime>750</BetweenTime>
    </Port>
  </Ports>

  <!-- The devices available in the room -->
  <Devices>
    <Device id="3" type="MockSourceDevice">
      <Name>Clickshare</Name>
    </Device>

    <Device id="4" type="CiscoCodec">
      <Name>Cisco SX10</Name>
      <Port>1</Port>
    </Device>

    <Device id="5" type="IrTvTuner">
      <Name>TV Tuner</Name>
      <Port>3</Port>
    </Device>

    <Device id="6" type="DmTx201C">
      <Name>Laptop</Name>
      <IPID>0x13</IPID>
    </Device>

    <Device id="7" type="DmRmcScalerC">
      <Name>DmRmcScalerC</Name>
      <IPID>0x11</IPID>
    </Device>

    <Device id="8" type="HdMd4X24kE">
      <Name>HdMd4X24kE</Name>
      <Address>10.40.1.155</Address>
      <IPID>0x12</IPID>
    </Device>

    <Device id="9" type="SharpDisplay">
      <Name>Sharp TV</Name>
      <Port>2</Port>
    </Device>
  </Devices>

  <!-- Device routing information -->
  <Routes>
    <Route id="3" type="Route">
      <Name>Tx to Scaler</Name>
      <SourceDevice>6</SourceDevice>
      <DestinationDevice>7</DestinationDevice>
    </Route>

    <Route id="4" type="Route">
      <Name>Scaler to 4x2</Name>
      <SourceDevice>7</SourceDevice>
      <DestinationDevice>8</DestinationDevice>
    </Route>

    <Route id="5" type="Route">
      <Name>Clickshare to 4x2</Name>
      <SourceDevice>3</SourceDevice>
      <DestinationDevice>8</DestinationDevice>
      <DestinationAddress>2</DestinationAddress>
    </Route>

    <Route id="6" type="Route">
      <Name>TV Tuner to 4x2</Name>
      <SourceDevice>5</SourceDevice>
      <DestinationDevice>8</DestinationDevice>
      <DestinationAddress>3</DestinationAddress>
    </Route>

    <Route id="7" type="Route">
      <Name>Codec to 4x2</Name>
      <SourceDevice>4</SourceDevice>
      <DestinationDevice>8</DestinationDevice>
      <DestinationAddress>4</DestinationAddress>
    </Route>

    <Route id="8" type="Route">
      <Name>4x2 to Display</Name>
      <SourceDevice>8</SourceDevice>
      <DestinationDevice>9</DestinationDevice>
    </Route>

    <Route id="9" type="Route">
      <Name>4x2 to Codec</Name>
      <SourceDevice>8</SourceDevice>
      <SourceAddress>2</SourceAddress>
      <DestinationDevice>4</DestinationDevice>
    </Route>
  </Routes>
</Room>
